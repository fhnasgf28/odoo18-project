<odoo>
  <data>
    <!-- explicit list view definition -->
    <record model="ir.ui.view" id="odoo_inventory_inherit_custom">
      <field name="name">odoo.inventory.inherit.custom</field>
      <field name="model">stock.picking</field>
      <field name="inherit_id" ref="stock.view_picking_form"/>
      <field name="arch" type="xml">
        <xpath expr="//field[@name='origin']" position="after">
          <field name="driver_name" invisible="picking_type_code != 'outgoing'"/>
          <field name="vehicle_plate" invisible="picking_type_code != 'outgoing'"/>
        </xpath>
      </field>
    </record>

<!--      tree-->
      <record model="ir.ui.view" id="odoo_inventory_inherit_custom_tree">
      <field name="name">odoo.inventory.inherit.custom.tree</field>
      <field name="model">stock.picking</field>
      <field name="inherit_id" ref="stock.vpicktree"/>
      <field name="arch" type="xml">
        <xpath expr="//field[@name='origin']" position="after">
          <field name="driver_name" invisible="picking_type_code != 'outgoing'"/>
          <field name="vehicle_plate" invisible="picking_type_code != 'outgoing'"/>
        </xpath>
      </field>
    </record>

  </data>
</odoo>
