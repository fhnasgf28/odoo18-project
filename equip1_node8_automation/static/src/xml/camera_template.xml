<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">
    <!-- Custom image widget with camera button -->
    <t t-name="equip1_node8_automation.ImageWithCameraField" owl="1">
        <div class="o_field_image d-flex flex-column align-items-center">
            <!-- Standard image display -->
            <img t-if="props.value" t-att-src="props.value" class="img img-fluid" t-att-name="props.name" t-att-title="props.string"/>
            <div t-else="" class="o_image o_image_placeholder"/>
            
            <!-- Camera button -->
            <button class="btn btn-secondary mt-2 camera-button">
                <i class="fa fa-camera"/> Capture with Camera
            </button>
        </div>
    </t>
    
    <!-- Camera modal template -->
    <div t-name="equip1_node8_automation.CameraModal" class="modal" id="camera-modal" tabindex="-1" role="dialog">
        <div class="modal-dialog modal-lg" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Capture Document</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&#215;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <div class="camera-container">
                        <!-- Video element for camera preview -->
                        <video id="camera-preview" autoplay="true" playsinline="true" class="w-100"></video>
                        <!-- Canvas for captured image -->
                        <canvas id="camera-canvas" class="w-100 d-none"></canvas>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary close-camera-btn" data-dismiss="modal">Close</button>
                    <button type="button" class="btn btn-primary capture-btn">
                        <i class="fa fa-camera"/> Capture
                    </button>
                    <button type="button" class="btn btn-info retake-btn d-none">
                        <i class="fa fa-refresh"/> Retake
                    </button>
                    <button type="button" class="btn btn-success use-image-btn d-none">
                        <i class="fa fa-check"/> Use This Image
                    </button>
                </div>
            </div>
        </div>
    </div>
</templates>