<odoo>
    <record id="purchase_order_form_telegram_feedback" model="ir.ui.view">
        <field name="name">purchase.order.form.telegram.feedback</field>
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase.purchase_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//sheet" position="inside">
                <group string="Telegram Feedback" name="telegram_feedback_group" invisible="state != 'cancel'">
                    <field name="feedback" nolabel="1" placeholder="Alasan penolakan dari Telegram"/>
                </group>
            </xpath>
        </field>
    </record>
</odoo>