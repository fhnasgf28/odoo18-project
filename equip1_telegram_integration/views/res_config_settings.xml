<odoo>
    <record id="res_config_settings_view_form_purchase_telegram" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.purchase.telegram</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="purchase.res_config_settings_view_form_purchase"/>
        <field name="arch" type="xml">
            <div>
                <h2>Telegram Approval</h2>
                <div class="row mt16 o_settings_container">
                    <div class="col-12 col-lg-6 o_setting_box">
                        <div class="o_setting_right_pane">
                            <label for="telegram_bot_token"/>
                            <div class="text-muted">Token API untuk bot persetujuan PO.</div>
                            <div class="content-group"><field name="telegram_bot_token"/></div>

                            <label for="telegram_manager_chat_id" class="mt16"/>
                            <div class="text-muted">Chat ID manajer yang akan menyetujui.</div>
                            <div class="content-group"><field name="telegram_manager_chat_id"/></div>

                            <label for="telegram_webhook_url" class="mt16"/>
                            <div class="text-muted">URL publik Odoo (dari ngrok/server).</div>
                            <div class="content-group"><field name="telegram_webhook_url"/></div>
                        </div>
                    </div>
                </div>
            </div>
        </field>
    </record>
</odoo>